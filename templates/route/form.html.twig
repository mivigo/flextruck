{% extends 'base.html.twig' %}

{% block title %}Add Truck!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Add Truck</h1>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.route_title) }}</label><br>
                {{ form_widget(form.route_title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.route_title) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.start_time) }}</label><br>
                {{ form_widget(form.start_time, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.start_time) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.end_time) }}</label><br>
                {{ form_widget(form.end_time, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.end_time) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}