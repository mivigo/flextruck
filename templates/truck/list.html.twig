{% extends 'base.html.twig' %}

{% block title %}Trucks List!{% endblock %}

{% block body %}
    <div class="container">
        <h1>List of trucks!</h1>
        <a href="{{ path('truck_add') }}" class="btn btn-success">Create Truck</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Registration</th>
                <th scope="col">Vendor</th>
                <th scope="col">Model</th>
                <th scope="col">Weight</th>
                <th scope="col">Length</th>
                <th scope="col">Height</th>
                <th scope="col"></th>
                <th scope="col">Actions</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
                {% for truck in trucks %}
                <tr>
                    <th scope="row">{{ truck.id }}</th>
                    <td>{{ truck.registration }}</td>
                    <td>{{ truck.vendor }}</td>
                    <td>{{ truck.model }}</td>
                    <td>{{ truck.weight }}</td>
                    <td>{{ truck.length }}</td>
                    <td>{{ truck.height }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('truck_view', {'truck': truck.id }) }}">View</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('truck_update', {'truck': truck.id }) }}">Edit</a>
                    </td>
                    <td>
                        <a onclick="if (!confirm('Do you really want to remove this item?')) return false;"
                           href="{{ path('truck_delete', {'truck': truck.id }) }}" class="confirm-delete btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
