{% extends 'base.html.twig' %}

{% block title %}Truck View!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Truck View!</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Registration</th>
                <th scope="col">Vendor</th>
                <th scope="col">Model</th>
                <th scope="col">Weight</th>
                <th scope="col">Length</th>
                <th scope="col">Height</th>
                <th scope="col">Created at</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{ truck.id }}</th>
                    <td>{{ truck.registration }}</td>
                    <td>{{ truck.vendor }}</td>
                    <td>{{ truck.model }}</td>
                    <td>{{ truck.weight }}</td>
                    <td>{{ truck.length }}</td>
                    <td>{{ truck.height }}</td>
                    <td>{{ truck.CreatedAt|date('F jS \\a\\t g:ia') }}</td>
                    <td>
                        <div class="d-inline">
                            <a class="btn btn-primary" href="{{ path('truck_update', {'truck': truck.id }) }}">Edit</a>
                            <a onclick="if (!confirm('Do you really want to remove this item?')) return false;"
                               href="{{ path('truck_delete', {'truck': truck.id }) }}" class="confirm-delete btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
