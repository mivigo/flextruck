{% extends 'base.html.twig' %}

{% block title %}Add Truck!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Add Truck</h1>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.registration) }}</label><br>
                {{ form_widget(form.registration, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.registration) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.vendor) }}</label><br>
                {{ form_widget(form.vendor, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.vendor) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.model) }}</label><br>
                {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.model) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.weight) }}</label><br>
                {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.weight) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.length) }}</label><br>
                {{ form_widget(form.length, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.length) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.height) }}</label><br>
                {{ form_widget(form.height, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.height) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}