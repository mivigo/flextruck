{% extends 'base.html.twig' %}

{% block title %}Add Truck!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Add Truck</h1>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.client_name) }}</label><br>
                {{ form_widget(form.client_name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.client_name) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.client_address) }}</label><br>
                {{ form_widget(form.client_address, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.client_address) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.delivery_time) }}</label><br>
                {{ form_widget(form.delivery_time, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.delivery_time) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.latitude) }}</label><br>
                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.latitude) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.longtitude) }}</label><br>
                {{ form_widget(form.longtitude, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.longtitude) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.done) }}</label><br>
                {{ form_widget(form.done, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.done) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}